/* pages/index/index.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.input:focus {
  border-color: #dc143c;
}

.number-inputs {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.number-input {
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 50%;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  box-sizing: border-box;
}

.number-input.red {
  border-color: #dc143c;
  color: #dc143c;
}

.number-input.red:focus {
  background-color: #dc143c;
  color: white;
}

.number-input.blue {
  border-color: #1e90ff;
  color: #1e90ff;
}

.number-input.blue:focus {
  background-color: #1e90ff;
  color: white;
}

.btn-query {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.result-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.result-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.lottery-info {
  margin-bottom: 30rpx;
  text-align: center;
}

.period-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.winning-numbers {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.red-numbers {
  display: flex;
  gap: 10rpx;
}

.number {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
}

.number.red {
  background-color: #dc143c;
}

.number.blue {
  background-color: #1e90ff;
}

.check-result {
  text-align: center;
  padding: 30rpx;
  border-radius: 15rpx;
  background-color: #f8f9fa;
}

.result-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.result-text.win {
  color: #28a745;
}

.result-text.lose {
  color: #dc3545;
}

.detail-text {
  font-size: 26rpx;
  color: #666;
}

.help-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.help-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.help-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
} 